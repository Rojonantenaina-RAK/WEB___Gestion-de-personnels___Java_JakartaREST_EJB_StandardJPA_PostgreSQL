<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="GestionPersonnelPU" transaction-type="JTA">
        <!-- DataSource JNDI défini dans WildFly -->
        <jta-data-source>java:/jdbc/gestionPersonnelDS</jta-data-source>

        <!-- Les classes Entity -->
        <class>com.humanicia.gestionpersonnel.entities.Service</class>
        <class>com.humanicia.gestionpersonnel.entities.Poste</class>
        <class>com.humanicia.gestionpersonnel.entities.Personnel</class>
        <class>com.humanicia.gestionpersonnel.entities.Contrat</class>
        <class>com.humanicia.gestionpersonnel.entities.Presence</class>
        <class>com.humanicia.gestionpersonnel.entities.Projet</class>
        <class>com.humanicia.gestionpersonnel.entities.Tache</class>

        <!-- Propriétés JPA / Hibernate -->
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>
